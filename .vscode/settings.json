{
    "cSpell.words": [
        "ASGI",
        "asyncio",
        "autoflush",
        "conftest",
        "exitstatus",
        "fastapi",
        "gedcom",
        "httpx",
        "pydantic",
        "pytest",
        "pythonic",
        "sessionfinish",
        "sessionmaker",
        "sqlalchemy",
        "Startlette",
        "uvicorn",
        "venv"
    ],

    // hide empty __init__.py away from my anxiety eyes!
    "files.exclude": {
        "**/__init__.py": true,
        "**/__pycache__": true
    },
    "search.exclude": {
        "**/__init__.py": true,
        "**/__pycache__": true
    },

    // Ensure Pylance resolves imports to the venv packages while linting
    "python.analysis.extraPaths": [
        "./venv/lib/python3.*/site-packages"
    ],
    // Ensure new terminals activate the venv automatically
    "python.defaultInterpreterPath":          "${workspaceFolder}/venv/bin/python",
    "python.terminal.activateEnvironment": true,

    // configure testing & debugging with pytest
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "python.testing.pytestArgs": [
        "${workspaceFolder}/tests",
        "-s"
    ],
    "python.testing.autoTestDiscoverOnSaveEnabled": true,

    "workbench.colorTheme": "Best Themes - Darcula",
 }

